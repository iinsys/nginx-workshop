graph LR
    Client1[Client 1]
    Client2[Client 2]
    ClientN[Client N]
    
    subgraph "nginx Web Server"
        Nginx[nginx Server]
        FileSystem[File System<br/>/var/www/html]
    end
    
    Client1 -->|Request: /index.html| Nginx
    Client2 -->|Request: /style.css| Nginx
    ClientN -->|Request: /image.jpg| Nginx
    
    Nginx -->|Read File| FileSystem
    FileSystem -->|Return File| Nginx
    Nginx -->|Response| Client1
    Nginx -->|Response| Client2
    Nginx -->|Response| ClientN
    
    style Nginx fill:#4ecdc4
    style FileSystem fill:#ffd93d
    style Client1 fill:#95e1d3
    style Client2 fill:#95e1d3
    style ClientN fill:#95e1d3

